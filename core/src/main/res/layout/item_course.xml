<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_shape_card"
    android:backgroundTint="@color/dark_gray" >

    <ImageView
        android:id="@+id/ivCourseImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_shape_cover"
        android:contentDescription="@string/course_image_cd"
        app:layout_constraintDimensionRatio="328:114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/btnFavorite"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/glass"
        android:contentDescription="@string/favorite_button_cd"
        android:src="@drawable/ic_bookmark"
        app:layout_constraintTop_toTopOf="@id/ivCourseImage"
        app:layout_constraintEnd_toEndOf="@id/ivCourseImage"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:id="@+id/ratingContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="2dp"
        android:paddingHorizontal="8dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_shape_info"
        android:backgroundTint="@color/glass"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@id/ivCourseImage"
        app:layout_constraintStart_toStartOf="@id/ivCourseImage"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/ivStar"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_star_fill" />

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.9"
            android:textAppearance="@style/Caption"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dateContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/glass"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        app:layout_constraintBottom_toBottomOf="@id/ivCourseImage"
        app:layout_constraintStart_toEndOf="@id/ratingContainer"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22 Мая 2024"
            android:textAppearance="@style/Caption" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvCourseTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Java-разработчик с нуля"
        android:textAppearance="@style/TitleMedium"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivCourseImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvCourseDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Освойте backend-разработку и программирование на Java, фреймворки..."
        android:textAppearance="@style/BodySmall"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvCourseTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="999 ₽"
        android:textAppearance="@style/TitleMedium"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:paddingStart="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvCourseDescription"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/btnDetailsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:contentDescription="@string/details_button"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/tvPrice"
        app:layout_constraintBottom_toBottomOf="@id/tvPrice"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btnDetailsText"
            style="@style/ButtonSmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="@string/details_button"
            android:textColor="@color/green" />

        <ImageView
            android:id="@+id/btnDetailsIcon"
            android:layout_width="8dp"
            android:layout_height="6.67dp"
            android:layout_marginStart="4dp"
            android:contentDescription="@string/details_button"
            android:src="@drawable/ic_arrow_right_short_fill"
            android:translationY="2dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
